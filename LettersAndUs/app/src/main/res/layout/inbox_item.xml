<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/inbox_card">
    <ImageView
        android:src="@drawable/letter_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="222dp"
    android:padding="15dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/stampImage"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView" />
    <TextView
        android:id="@+id/bigText"
        android:text="Placeholder"
        android:textSize="23sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stampImage"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_text"
        android:text="From "
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/smallText"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/smallText"
        android:text="placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stampImage"
        app:srcCompat="@android:drawable/screen_background_dark_transparent" />
</RelativeLayout>
</android.support.v7.widget.CardView>